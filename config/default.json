{
  "system": {
    "debug_mode": false,
    "log_level": "INFO",
    "max_fps": 60
  },
  "modules": {
    "computer_vision": {
      "enabled": true,
      "hand_detection_confidence": 0.5,
      "hand_tracking_confidence": 0.5,
      "max_hands": 2
    },
    "audio": {
      "enabled": true,
      "sample_rate": 44100,
      "buffer_size": 512,
      "synthesis_enabled": true
    },
    "hardware": {
      "glove_controller": {
        "enabled": true,
        "serial_port": "auto",
        "baud_rate": 115200,
        "action_codes": {
          "HOVER_GUIDE": 0,
          "PRESS_CORRECT": 1,
          "PRESS_INCORRECT": 2,
          "RELEASE": 3,
          "NO_KEY": 4,
          "ERROR": 5
        }
      },
      "audio_board": {
        "enabled": true,
        "serial_port": "auto",
        "baud_rate": 115200
      }
    },
    "finger_tracking": {
      "debounce_time": 0.05,
      "enable_serial_output": true,
      "motor_ids": {
        "thumb": 0,
        "index": 1,
        "middle": 2,
        "ring": 3,
        "pinky": 4
      }
    }
  }
}